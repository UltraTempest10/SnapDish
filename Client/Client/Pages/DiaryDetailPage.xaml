<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnapDishApp.DiaryDetailPage"
             Title="">
    <ScrollView>
        <StackLayout Padding="20">
            <Label x:Name="TitleLabel" FontSize="Large" />
            <Label x:Name="LocationLabel" FontSize="Medium" />
            <Label x:Name="CreateTimeLabel" FontSize="Small" />
            <Image x:Name="ImageView" WidthRequest="300" HeightRequest="400" />
            <Label x:Name="ContentLabel" FontSize="Medium" />
            <Label x:Name="RatingLabel" FontSize="Small" />
        </StackLayout>
    </ScrollView>

</ContentPage>