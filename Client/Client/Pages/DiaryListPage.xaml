<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SnapDishApp"
             x:Class="SnapDishApp.DiaryListPage"
             x:DataType="local:DiaryListPageViewModel">

    <StackLayout Padding="10">
        <Label Text="美食日记"
               FontSize="24"
               HorizontalOptions="Center" />
        <CollectionView x:Name="FoodRecordsCollection"
                        ItemsSource="{Binding FoodRecords}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:FoodRecord">
                    <StackLayout Padding="10">
                        <Label Text="{Binding FoodName}" FontSize="20" />
                        <Label Text="{Binding Location}" FontSize="16" />
                        <Label Text="{Binding Description}" FontSize="14" />
                        <Label Text="{Binding Date, StringFormat='{0:yyyy-MM-dd}'}" FontSize="12" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
