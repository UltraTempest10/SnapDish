<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnapDishApp.RegisterPage"
             Title="注册">
    <VerticalStackLayout Spacing="10" Padding="10">
        <Entry x:Name="EmailEntry" Placeholder="邮箱" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="密码" IsPassword="True"/>
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="确认密码" IsPassword="True"/>
        <FlexLayout Direction="Row">
            <Entry x:Name="VarificationCodeEntry" Placeholder="验证码" FlexLayout.Grow="1"/>
            <Button Text="获取验证码" Clicked="OnGetVarificationCodeButtonClicked" VerticalOptions="CenterAndExpand"/>
        </FlexLayout>
        <Button Text="注册" Clicked="OnRegisterButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>